doctype html
include pug/components/mixins
html(lang="en")
    head
        include pug/links/styles
        include pug/links/fonts
        title FoadRoad/Register
    body 
        main(class='register row mx-0 justify-content-between mw-100 vh-100 mh- gap-5 px-sm-4 pe-lg-0 ps-lg-4', id='login')
            div(class='info col-12 col-xl-5 d-flex align-items-center justify-content-center flex-column gap-4')
                +logo
                h1(class='sen display-2 green') Register
                p(class='opensans lh-lg text-black', style='--bs-text-opacity: .6;') Let’s Sign up first for enter into Food Road Website. Uh She Up!
                form(class='w-100 d-flex flex-wrap justify-content-between gap-2')

                    div(class='form-floating mb-4 flex-grow-1 mw-45')
                        input(class='form-control shadow-none rounded-pill p-0 ps-3', type="text", placeholder='First Name', id='firstName' required)
                        label(for="firstName") First Name 

                    div(class='form-floating mb-4 flex-grow-1 mw-45')
                        input(class='form-control shadow-none rounded-pill p-0 ps-3', type="text", placeholder='Last Name', id='lastName' required)
                        label(for="lastName") Last Name 
                    
                    div(class='form-floating mb-4 flex-grow-1 mw-45')
                        input(class='form-control shadow-none rounded-pill p-0 ps-3', type="text", placeholder='Phone Number', id='phone' required)
                        label(for="phone") Phone Number
                    
                    div(class='form-floating mb-4 flex-grow-1 mw-45')
                        select(class='form-select form-control shadow-none rounded-pill p-0 ps-3', id='country')
                            option(value="egypt") Egypt 
                            option(value="qatar") Qatar 
                            option(value="libya") Libya 
                            option(value="saudi arabia") Saudi Arabia 
                        
                    div(class='form-floating mb-4 flex-grow-1 w-100')
                        input(class='form-control shadow-none rounded-pill p-0 ps-3', type='mail', placeholder='Mail Address', id='mail' required)
                        label(for="mail") Mail Address 

                    div(class='form-floating mb-4 flex-grow-1 mw-45')
                        input(class='form-control shadow-none rounded-pill p-0 ps-3', type='password', placeholder='Password', id='pass' required)
                        label(for="pass") Password

                    div(class='form-floating mb-4 flex-grow-1 mw-45')
                        input(class='form-control shadow-none rounded-pill p-0 ps-3', type='password', placeholder='Confirm Password', id='confirm-pass' required)
                        label(for="confirm-pass") Confirm Password 

                    div(class='form-check w-100 mb-4')
                            input(class="form-check-input pointer" type="checkbox" id="flexCheckDefault" required)
                            label(class="form-check-label pointer" for="flexCheckDefault") I agree to Square’s #[a(class='text-decoration-none yellow', href='#') Cookie] and #[a(class='text-decoration-none yellow', href='#') Privacy Policy].

                    a(class='btn btn-secondary rounded-pill px-5', href='login.html') Login
                    
                    button(class='btn text-white rounded-pill flex-grow-1') Get Started

            div(class='image-holder col-xl-6 relative d-none d-xl-block px-0')
                img(src="images/register.png")
                +overlay()
        
        include pug/links/scripts