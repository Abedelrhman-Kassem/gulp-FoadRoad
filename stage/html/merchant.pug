                            div(class='form-floating mb-3 opensans')
                                input(class='form-control p-0 ps-5 rounded-pill shadow-none', type="text", id='address', placeholder='Your Address')
                                label(for='address') Your Address
                            
                            div(class='form-floating mb-3 opensans')
                                input(class='form-control p-0 ps-5 rounded-pill shadow-none', type="text", id='email', placeholder='Your Email')
                                label(for='email') Your Email

                            div(class='form-floating mb-3 opensans')
                                input(class='form-control p-0 ps-5 rounded-pill shadow-none', type="text", id='phone', placeholder='Your Phone')
                                label(for='phone') Your Phone

                            +buttonLink('#','Register Now', 'mt-5')

        section(class='merchant-simple')
            div(class='container')
